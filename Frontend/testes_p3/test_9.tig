/* verify if a substring exists, print true if such substring exists otherwise false */

let
    var a := "esse semestre nao acaba nunca"
    var b := "noite"
  
    function achasubstr(a: string, b: string, tam: int ) : int = 
    let
      var resultado := 0 
      var aux := " "
  
    in
      for i := 0 to tam - 1 do (
        aux := substring(a, 0, i); /* function substring(s:string,f:int,n:int):string
        Return the substring of s starting at the character f (first character is numbered zero) and going for n characters*/
        if aux = b then 
          resultado := 1
        else
          resultado := 0;
      );
  
      resultado
    end
  in
    if achasubstr(a,b, 29) then
      print("True")
    else
      print("False")
  end
