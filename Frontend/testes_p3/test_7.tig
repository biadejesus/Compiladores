	var x := 11

    function floorsquare(x: int) =
    let
        var square := 1
        var aux := 1
        var resultado := 0

    in
        if x = 0 | x = 1 then
            square = x;

        while  aux <= x (
            i := i+1;
            aux := i*i;   
        );
        resultado := i-1;

    resultado
    end

