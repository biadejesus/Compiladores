/* print the max value in a array of int */
let
    type arrayt = array of int
/* baseado no ex 29 do site do livro */
	var vetor: arrayt := arrayt [5] of 0 
	var tam:= 5

    function maxvalue(tam: int, vetor: arrayt): int = 
    let
        var maior := vetor[0]
    in
        for i := 0 to tam do
            if vetor[i] > maior then
                maior := vetor[i];

        maior
    end

    function printint(i: int) =
        let function f(i:int) = if i>0 
                    then (f(i/10); print(chr(i-i/10*10+ord("0"))))
        in if i<0 then (print("-"); f(-i))
            else if i>0 then f(i)
            else print("0")
        end

    
in
    printint(maxvalue(tam, vetor))
end